<?xml version="1.0" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
        http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">



    <class name="Rz\MediaBundle\Entity\Media">
        <constraint name="Callback" >
            <option name="methods">
                <value>isStatusErroneous</value>
            </option>
            <option name="groups">
                <value>admin</value>
            </option>
        </constraint>
        <constraint name="Sonata\AdminBundle\Validator\Constraints\InlineConstraint">
            <option name="service">sonata.media.pool</option>
            <option name="method">validate</option>
            <option name="groups">
                <value>admin</value>
            </option>
        </constraint>
        <property name="name">
            <constraint name="NotNull">
                <option name="groups">
                    <value>admin</value>
                </option>
            </constraint>
            <constraint name="NotBlank">
                <option name="groups">
                    <value>admin</value>
                </option>
            </constraint>
        </property>
        <property name="providerReference">
            <constraint name="NotNull">
                <option name="groups">
                    <value>admin</value>
                </option>
            </constraint>
            <constraint name="NotBlank">
                <option name="groups">
                    <value>admin</value>
                </option>
            </constraint>
        </property>
        <property name="providerStatus">
            <constraint name="NotNull">
                <option name="groups">
                    <value>admin</value>
                </option>
            </constraint>
            <constraint name="NotBlank">
                <option name="groups">
                    <value>admin</value>
                </option>
            </constraint>
        </property>
    </class>

    <class name="Rz\MediaBundle\Entity\Gallery">
        <constraint name="Sonata\MediaBundle\Validator\Constraints\ValidMediaFormat">
            <option name="groups">
                <value>admin</value>
            </option>
        </constraint>
        <property name="galleryHasMedias">
            <constraint name="Valid" />
        </property>
        <property name="context">
            <constraint name="NotNull">
                <option name="groups">
                    <value>admin</value>
                </option>
            </constraint>
            <constraint name="NotBlank">
                <option name="groups">
                    <value>admin</value>
                </option>
            </constraint>
        </property>
        <property name="name">
            <constraint name="NotNull">
                <option name="groups">
                    <value>admin</value>
                </option>
            </constraint>
            <constraint name="NotBlank">
                <option name="groups">
                    <value>admin</value>
                </option>
            </constraint>
        </property>
        <property name="defaultFormat">
            <constraint name="NotNull">
                <option name="groups">
                    <value>admin</value>
                </option>
            </constraint>
            <constraint name="NotBlank">
                <option name="groups">
                    <value>admin</value>
                </option>
            </constraint>
        </property>

        <property name="contentFormatter">
            <constraint name="Sonata\FormatterBundle\Validator\Constraints\Formatter">
                <option name="groups">
                    <value>admin</value>
                </option>
            </constraint>
        </property>

        <constraint name="Rz\MediaBundle\Validator\Constraints\PrePersistRelation">
            <option name="groups">
                <value>admin</value>
            </option>
        </constraint>
    </class>

    <class name="Rz\MediaBundle\Entity\GalleryHasMedia">
        <property name="media">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>admin</value>
                </option>
            </constraint>
        </property>
    </class>

</constraint-mapping>
