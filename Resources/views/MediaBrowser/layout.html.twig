        '@RmzamoraJqueryBundle/Resources/public/jquery-plugins/imagesloaded/imagesloaded.min.js'
        '@RmzamoraJqueryBundle/Resources/public/jquery-plugins/select2/select2.js'
        '@RzAdminBundle/Resources/public/js/lib/sprintf.js'
        '@RzAdminBundle/Resources/public/js/rzadmin-base.js'
        '@RzFieldTypeBundle/Resources/public/js/rzadmin-fieldtype.js'
        '@RzDoctrineORMAdminBundle/Resources/public/js/rzadmin-many-assoc.js'
        '@RzDoctrineORMAdminBundle/Resources/public/js/rzadmin-one-assoc.js'
        filter='?closure'
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}

        {% block sonata_javascript_block %}
            {% block javascripts_files %}{% endblock javascripts_files %}
        {% endblock sonata_javascript_block %}

        {# jquery document.ready #}
        <script>
            jQuery(document).ready(function() {
                {% block javascripts_document_ready %}{% endblock javascripts_document_ready %}
            });

            window.SONATA_CONFIG = {
                CONFIRM_EXIT: {% if admin_pool is defined and admin_pool.getOption('confirm_exit') %}true{% else %}false{% endif %},
                USE_SELECT2: {% if admin_pool is defined and admin_pool.getOption('use_select2') %}true{% else %}false{% endif %},
                USE_ICHECK: {% if admin_pool is defined and admin_pool.getOption('use_icheck') %}true{% else %}false{% endif %}
            };
            window.SONATA_TRANSLATIONS = {
                CONFIRM_EXIT:  '{{ 'confirm_exit'|trans({}, 'SonataAdminBundle')|escape('js') }}'
            };
        </script>
        <!--[if lte IE 9]>
        <script src="{{ asset('bundles/rzadmin/js/plugins/placeholder/jquery.placeholder.min.js')}}"></script>
        <script>
            $(document).ready(function() {
                $('input, textarea').placeholder();
            });
        </script>
        <!--[endif]/-->
        {# javascript code block #}
        {% block javascripts_code_block %}{% endblock javascripts_code_block %}
    {% endblock javascripts %}

    <title>
        {% spaceless %}
            {{ 'Admin'|trans({}, 'SonataAdminBundle') }}
            {% if _title is not empty %}
                {{ _title|raw }}
            {% else %}
                {% if action is defined %}
                    -
                    {% for menu in admin.breadcrumbs(action) %}
                        {% if not loop.first  %}
                            &gt;
                        {% endif %}
                        {% if (menu.label|raw == '&#8962;' or menu.label == '⌂') %}Dashboard{% else %}{{ menu.label }}{% endif %}
                    {% endfor %}
                {% endif %}
            {% endif%}
        {% endspaceless %}
    </title>
</head>

<body class="rz-cms-admin{% block admin_theme %} theme-darkblue{% endblock %}{% block admin_body_class %}{% endblock %}" data-theme="theme-darkblue" data-layout-topbar="fixed">
{##############################################
 #   header
 ##############################################}
{% block navbar %}
    {# navbar #}
    <div id="navigation">
        <div class="container-fluid">
            {% if admin_pool is defined %}
                {% block logo %}
                    <a href="{{ url('sonata_admin_dashboard') }}" id="brand">
                        {{ admin_pool.title }}
                    </a>
                {% endblock logo %}
                <ul class='main-nav'>
                    <li>
                        <a href="{{ url('sonata_admin_dashboard') }}">
                            <span>Dashboard</span>
                        </a>
                    </li>
                    {% block top_bar_before_nav %} {% endblock %}
                    {% block sonata_top_bar_nav %}
                        {% if app.user.token and is_granted('ROLE_SONATA_ADMIN') %}
                            {% for group in admin_pool.dashboardgroups %}
                                <li>
                                    <a href="#" data-toggle="dropdown" class='dropdown-toggle'>
                                        <span>{{ group.label|trans({}, group.label_catalogue) }}</span>
                                        <span class="caret"></span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        {% for admin in group.items %}
                                            {% if admin.hasroute('list') and admin.isGranted('LIST') %}
                                                <li><a href="{{ admin.generateUrl('list')}}">{{ admin.label|trans({}, admin.translationdomain)|raw }}</a></li>
                                            {% endif %}
                                        {% endfor %}
                                    </ul>
                                </li>
                            {% endfor %}
                        {% endif %}
                    {% endblock %}
                    {% block top_bar_after_nav %} {% endblock %}
                </ul>
                <div class="user">
                    <div class="dropdown">
                        <a href="#" class='dropdown-toggle' data-toggle="dropdown"><i class="icon-search"></i></a>
                        <ul class="dropdown-menu pull-right">
                            <li>
                                {% block sonata_top_bar_search %}
                                    {% if app.user.token and is_granted('ROLE_SONATA_ADMIN') %}
                                        <form action="{{ url('sonata_admin_search') }}" method="GET"  class="navbar-search rz-admin-search">
                                            <div class="input-append">
                                                <input type="text" name="q" value="{{ app.request.get('q') }}" class="input-large search-query" placeholder="{{ 'search_placeholder'|trans({}, 'SonataAdminBundle') }}"/>
                                            </div>
                                        </form>
                                    {% endif %}
                                {% endblock %}
                            </li>
                        </ul>
                    </div>
                    {% include admin_pool.getTemplate('user_block') %}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock navbar %}
{##############################################
 #   container
 ##############################################}
{# container fluid #}
{% block main_container %}
    <div class="container-fluid" id="content">
    <div id="main">
    <div class="container-fluid">
    {# div row #}
    <div class="row-fluid">
    {# div span #}
    <div class="span12">
    {# content wrapper #}
    <div id="contentwrapper">
    {# main content #}
    <div class="main_content">
    {% block main_content %}
        {# notices & flash messages #}
        {% block notice %}
            {% for type in sonata_flashmessages_types() %}
                {% set domain = domain is defined ? domain : null %}
                {% for message in sonata_flashmessages_get(type, domain) %}
                    <div class="rz-main-message">
                        <div class="alert alert-{{ type|sonata_status_class }}">
                            {{ message|raw }}
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}
        {% endblock %}
        {#/ notices & flash messages #}
        {# page tite #}
        {# TODO: add settings for page title and description #}
        {% block admin_module_title %}
            {% if admin is defined %}
                <div class="page-header">
                    <div class="pull-left">
                        <h1>{{ admin.label|trans({}, admin.translationdomain)|raw }}</h1>
                    </div>
                    <div class="pull-right">
                        <ul class="stats">
                            <li class='red'>
                                <i class="icon-calendar"></i>
                                <div class="details">
                                    <span class="big">February 22, 2013</span>
                                    <span>Wednesday, 13:56</span>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            {% endif %}
        {% endblock admin_module_title %}
        {#/ page tite #}
        {# breadcrumbs #}
        {% if _breadcrumb is not empty or action is defined %}
            <div class="breadcrumbs">
                <ul>
                    {% if _breadcrumb is empty %}
                        {% if action is defined %}
                            {% for menu in admin.breadcrumbs(action) %}
                                {% if not loop.last  %}
                                    <li>
                                        {% if menu.uri is not empty %}
                                            <a href="{{ menu.uri }}">{% if (menu.label|raw == '&#8962;' or menu.label == '⌂') %}Home{% else %}{{ menu.label|trans({}, admin.translationdomain)  }}{% endif %}</a>
                                        {% else %}
                                            <a href="#">{{ menu.label|trans({}, admin.translationdomain) }}</a>
                                        {% endif %}
                                        <i class="icon-angle-right"></i>
                                    </li>
                                {% else %}
                                    <li>
                                        <a href="#">{{ menu.label|trans({}, admin.translationdomain) }}</a>
                                    </li>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                    {% else %}
                        {{ _breadcrumb|raw }}
                    {% endif %}
                </ul>
            </div>
        {% endif %}
        {#/ breadcrumbs #}
        {%block admin_information %}{% endblock %}
        {# action buttons #}
        {%block actions %}{% endblock %}
        {% if _side_menu is not empty %}
            <div class="row-fluid">
                <div class="span12">
                    <div class="navbar rz-admin-navbar">
                        <div class="navbar-inner">
                            <div class="container">
                                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                                    <i class="icon-reorder"></i>
                                </a>
                                <div class="nav-collapse collapse">
                                    {{ _side_menu|raw }}
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
        {#/ action buttons #}
        {# list filter #}
        {% if _list_filters is not empty %}
            {{ _list_filters|raw }}
        {% endif %}
        {#/ list filter #}
        <div class="row-fluid">
            <div class="content span12">
                {% block sonata_admin_content %}
                    {% if _preview is not empty %}
                        <div class="sonata-ba-preview">{{ _preview|raw }}</div>
                    {% endif %}

                    {% if _content is not empty %}
                        <div class="sonata-ba-content">{{ _content|raw }}</div>
                    {% endif %}

                    {% if _show is not empty %}
                        <div class="sonata-ba-show">{{ _show|raw }}</div>
                    {% endif %}

                    {% if _form is not empty %}

                        {{ _form|raw }}

                    {% endif %}

                    {% if _list_table is not empty %}
                        <div class="row-fluid">
                            <div class="sonata-ba-list span12">
                                {{ _list_table|raw }}
                            </div>
                        </div>
                    {% endif %}

                {% endblock %}
            </div>
        </div>
    {% endblock main_content %}
    </div>{#/main content #}
    </div>{#/content wrapper #}
    </div>{#/div span #}
    </div>{#/div row #}
    </div>{#/container-fluid row #}
    </div>{#/main row #}
    </div>{#/container fluid #}
{% endblock main_container %}
{##############################################
 #   footer
 ##############################################}
{% block footer %}
    {#footer #}
    {#<div id="footer">#}
    {#{% block footer_content %}#}
    {#<p>{{ admin_pool.title }}</p>#}
    {#{% endblock footer_content %}#}
    {#<a href="#" class="gototop"><i class="icon-arrow-up"></i></a>#}
    {#</div>#}
    {#/footer #}
{% endblock %}
{# javascript code block #}
{% block javascripts_bottom %}{% endblock javascripts_bottom %}
{{ sonata_block_include_stylesheets('screen') }}
{{ sonata_block_include_javascripts('screen') }}
</body>
</html>